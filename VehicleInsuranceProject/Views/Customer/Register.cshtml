@using VehicleInsuranceProject.ViewModels;
@model CustomerRegisterViewModel; // Use CustomerRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust the layout if needed
}

<div class="container my-5">
    <h2 class="text-center mb-4 display-5 fw-bold text-insure-dark-purple">Register</h2>
    <div class="row justify-content-center">
        <div class="col-md-6 ">
            <div class="card p-4 shadow-lg border-0 rounded-3">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-insure-dark-text">Name</label>
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label text-insure-dark-text">Email</label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label text-insure-dark-text">Phone</label>
                        <input asp-for="Phone" class="form-control form-control-lg" placeholder="Enter your phone number" />
                        <span asp-validation-for="Phone" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label text-insure-dark-text">Address</label>
                        <input asp-for="Address" class="form-control form-control-lg" placeholder="Enter your address" />
                        <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label text-insure-dark-text">Password</label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label text-insure-dark-text">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <button type="submit" value="Register" class="btn btn-insure-primary w-100 p-3 fs-5">Register</button>
                    <p class="text-center mt-4 text-insure-dark-text">
                        Already have an account?
                        <a asp-controller="Customer" asp-action="Login" class="text-decoration-none text-insure-mid-purple fw-semibold">Login</a>
                    </p>
                    <div class="text-center mt-3">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-insure-mid-purple">Back to Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}