@model VehicleInsuranceProject.Repository.Models.CoverageLevel

@{
    ViewData["Title"] = "Add New Coverage Level";
    Layout = "_Layout"; // Ensure this matches your main layout or admin layout
}

@section Head {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .dashboard-container {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .card {
            border: none;
            border-radius: 8px;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .btn-insure-primary {
            background-color: #007bff; /* Primary blue for save */
            border-color: #007bff;
            color: white;
            transition: background-color 0.2s ease-in-out;
        }

            .btn-insure-primary:hover {
                background-color: #0056b3; /* Darker blue */
                border-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
}

<div class="container dashboard-container">
    <h2 class="mb-4"><i class="bi bi-plus-circle me-2"></i> @ViewData["Title"]</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
            <i class="bi bi-x-circle-fill me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

    <div class="card shadow-sm p-4">
        <form asp-action="CreateCoverageLevel" asp-controller="Admin" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PremiumMultiplier" class="form-label"></label>
                <input asp-for="PremiumMultiplier" type="number" step="0.01" min="0.1" max="10.0" class="form-control" />
                <span asp-validation-for="PremiumMultiplier" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CoverageMultiplier" class="form-label"></label>
                <input asp-for="CoverageMultiplier" type="number" step="0.01" min="0.1" max="10.0" class="form-control" />
                <span asp-validation-for="CoverageMultiplier" class="text-danger"></span>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="CoverageLevels" asp-controller="Admin" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
                <button type="submit" class="btn btn-insure-primary btn-lg">
                    <i class="bi bi-save me-2"></i> Add Coverage Level
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $(".alert-dismissible").fadeTo(500, 0).slideUp(500, function(){
                    $(this).remove();
                });
            }, 7000); // 7 seconds
        });
    </script>
}
