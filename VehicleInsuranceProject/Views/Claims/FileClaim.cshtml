@* VehicleInsuranceProject.Web/Views/Claims/FileClaim.cshtml *@
@model VehicleInsuranceProject.Web.ViewModels.ClaimViewModel

@{
    ViewData["Title"] = "File a Claim";
}

@section Head {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* --- Modern & Professional Color Palette --- */
        :root {
            --ins-bg-light: #f8f9fa;
            --ins-primary: #0d6efd; /* Consistent modern blue */
            --ins-header-bg: #343a40; /* Dark slate header */
            --ins-header-text: #ffffff;
            --ins-text-primary: #212529;
            --ins-text-secondary: #6c757d;
            --ins-border-color: #dee2e6;
            --ins-card-bg: #ffffff;
            --ins-card-shadow: rgba(0, 0, 0, 0.05);
            --ins-input-focus-border: #86b7fe;
            --ins-input-focus-shadow: rgba(13, 110, 253, 0.25);
        }

        body {
            background-color: var(--ins-bg-light);
        }

        .claim-container {
            padding-top: 2rem;
            padding-bottom: 4rem;
            max-width: 800px;
        }

        .claim-card {
            border: none;
            border-radius: 0.75rem;
            box-shadow: 0 4px 12px var(--ins-card-shadow);
            overflow: hidden;
        }

        .card-header-custom {
            background-color: var(--ins-header-bg);
            color: var(--ins-header-text);
            padding: 1.5rem 2rem;
            border-bottom: none;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .card-header-custom h2 {
            margin-bottom: 0;
            font-weight: 500;
            font-size: 1.5rem;
        }
        
        .policy-info-header {
            text-align: right;
        }
        
        .policy-info-header span {
             display: block;
             font-size: 0.9rem;
             color: var(--ins-border-color);
        }

        .policy-info-header strong {
            font-weight: 600;
            color: var(--ins-header-text);
            font-size: 1rem;
        }

        .claim-form-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 500;
            color: var(--ins-text-primary);
            margin-bottom: 0.5rem;
        }

        .form-control, .form-control-file {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            border: 1px solid var(--ins-border-color);
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        .form-control:focus {
            border-color: var(--ins-input-focus-border);
            box-shadow: 0 0 0 0.25rem var(--ins-input-focus-shadow);
            outline: none;
        }

        textarea.form-control {
            min-height: 140px;
            resize: vertical;
        }

        .form-text {
            font-size: 0.875rem;
        }
        
        .button-group {
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
            margin-top: 1.5rem;
        }
        
        .btn-insure-primary {
            background-color: var(--ins-primary);
            border-color: var(--ins-primary);
            color: white;
            transition: background-color 0.2s ease, transform 0.2s ease;
        }
        
        .btn-insure-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
            color: white;
        }

        /* Responsive adjustments */
        @@media (max-width: 767.98px) {
            .card-header-custom {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.75rem;
            }
            .policy-info-header {
                text-align: left;
                width: 100%;
            }
             .button-group {
                flex-direction: column;
                align-items: stretch;
            }
        }
    </style>
}

<div class="container claim-container">
    <div class="card claim-card">
        <div class="card-header-custom">
            <h2><i class="bi bi-file-earmark-plus me-2"></i> @ViewData["Title"]</h2>
            <div class="policy-info-header">
                <span>Policy #<strong>@Model.PolicyNumber</strong></span>
                <span>Coverage: <strong>@Model.PolicyCoverageAmount.ToString("C")</strong></span>
            </div>
        </div>
        <div class="card-body claim-form-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="FileClaim" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PolicyId" />
                <input type="hidden" asp-for="PolicyCoverageAmount" />

                <div class="mb-3">
                    <label asp-for="PolicyNumber" class="form-label"></label>
                    <input asp-for="PolicyNumber" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="ClaimAmount" class="form-label"></label>
                    <input asp-for="ClaimAmount" class="form-control" type="number" step="0.01" min="0.01" max="@Model.PolicyCoverageAmount" placeholder="e.g., 1500.00" />
                    <span asp-validation-for="ClaimAmount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ClaimReason" class="form-label"></label>
                    <textarea asp-for="ClaimReason" class="form-control" placeholder="Please describe the reason for your claim in detail..."></textarea>
                    <span asp-validation-for="ClaimReason" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="ClaimImages" class="form-label">Supporting Images</label>
                    <input asp-for="ClaimImages" type="file" multiple class="form-control" accept="image/*" />
                    <small class="form-text text-muted">You can upload multiple images (JPEG, PNG).</small>
                    <span asp-validation-for="ClaimImages" class="text-danger"></span>
                </div>

                <div class="button-group border-top pt-3">
                    <a asp-action="ViewPolicies" asp-controller="Customer" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-insure-primary">
                        <i class="bi bi-check-circle me-1"></i> Submit Claim
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}