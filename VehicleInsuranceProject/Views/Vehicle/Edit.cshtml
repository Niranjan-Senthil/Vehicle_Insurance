@model VehicleInsuranceProject.Repository.Models.Vehicle
@using VehicleInsuranceProject.Repository.Models
@{
    ViewData["Title"] = "Edit Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure your layout is correctly referenced
}

<style>
    /* ------------------------------------------------------------------ */
    /* POLISURE VIBRANT BLUE/PURPLE THEME STYLES (Edit Form)              */
    /* Consistent variables imported from the Add/View pages              */
    /* ------------------------------------------------------------------ */

    :root {
        --theme-primary-purple: #6c20b5;     /* Main button/accent color (Deep Purple) */
        --theme-dark-blue: #303F9F;          /* Darker primary color (Header Text) */
        --theme-bg-light: #f4f6f9;           /* Very light dashboard background */
        --theme-text-dark: #2c3e50;          /* Main content text color */
        --theme-border-light: #e0e0e0;       /* Subtle border */
        --theme-accent-blue: #2563eb;        /* Secondary action accent (e.g., Update button) */
    }

    /* Global Body Styling */
    body {
        background-color: var(--theme-bg-light);
        font-family: 'Inter', sans-serif;
        color: var(--theme-text-dark);
    }

    /* Main form container - clean, professional card */
    .insure-form-card {
        max-width: 800px;
        margin: 60px auto; 
        padding: 50px; /* Consistent padding */
        background-color: #ffffff; 
        border-radius: 12px; 
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05); /* Soft, subtle shadow */
        border: 1px solid var(--theme-border-light); 
    }

    /* Page Heading Block (Centered with Icon - Shared style) */
    .header-block {
        text-align: center;
        margin-bottom: 40px;
    }

    .header-icon {
        font-size: 3.5rem;
        color: var(--theme-accent-blue); /* Use the accent blue for the Edit icon */
        margin-bottom: 10px;
        display: block;
    }

    .header-block h2 {
        font-size: 2.2rem;
        font-weight: 700;
        color: var(--theme-dark-blue); 
        margin-bottom: 5px;
    }
    
    .header-block p {
        color: #7f8c8d; /* Secondary/muted text */
        font-size: 1rem;
    }


    /* Labels */
    .insure-label {
        font-weight: 600; 
        color: var(--theme-text-dark); 
        margin-bottom: 8px; 
    }

    /* Form Controls (Inputs, Selects) */
    .insure-input, .insure-select {
        border-radius: 8px; 
        border: 1px solid #d1d9e6; 
        padding: 0.8rem 1.1rem;
        font-size: 1.0rem; 
        color: #495057; 
        transition: all 0.3s ease;
    }

        .insure-input:focus, .insure-select:focus {
            border-color: var(--theme-accent-blue); 
            box-shadow: 0 0 0 0.25rem rgba(37, 99, 235, 0.25); /* Soft glow matching accent blue */
            outline: none; 
            background-color: #fcfdff; 
        }

    /* Validation summary and individual field errors (unchanged) */
    .validation-summary-errors {
        background-color: #fff0f0; 
        color: #d80000; 
        border: 1px solid #ffcccc; 
        border-radius: 8px;
        padding: 15px 20px;
        margin-bottom: 25px;
        font-size: 0.95rem;
    }

    .field-validation-error {
        color: #d80000; 
        font-size: 0.85rem;
        margin-top: 5px;
        display: block; 
    }

    /* Buttons - Primary action (Update Vehicle) - Using Accent Blue for Edit Action */
    .btn-insure-update {
        background-color: var(--theme-accent-blue); 
        border-color: var(--theme-accent-blue);
        color: #ffffff;
        padding: 0.9rem 2.2rem;
        font-size: 1.0rem; 
        font-weight: 600;
        border-radius: 6px; 
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        box-shadow: 0 4px 10px rgba(37, 99, 235, 0.4); 
    }

        .btn-insure-update:hover {
            background-color: #1e40af; /* Slightly darker blue on hover */
            border-color: #1e40af;
            transform: translateY(-2px); 
            box-shadow: 0 6px 15px rgba(37, 99, 235, 0.6); 
            color: #ffffff; 
        }

        .btn-insure-update:active {
            transform: translateY(0);
            box-shadow: none;
        }

    /* Buttons - Secondary action (Back to List) - Same as previous secondary button */
    .btn-insure-secondary {
        background-color: #e9ecef; 
        border: 1px solid #d1d9e6;
        color: #495057; 
        padding: 0.9rem 2.2rem;
        font-size: 1.0rem; 
        font-weight: 600;
        border-radius: 6px; 
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-insure-secondary:hover {
            background-color: #dee2e6; 
            border-color: #c5cbd3;
            transform: translateY(-2px);
            box-shadow: 0 0 0 0.25rem rgba(108, 32, 181, 0.05); 
            color: #495057; 
        }

        .btn-insure-secondary:active {
            transform: translateY(0);
            box-shadow: none;
        }
</style>

<div class="container insure-form-card">
    
    <div class="header-block">
        <i class="bi bi-pencil-square header-icon"></i>
        <h2>Edit Vehicle Details</h2>
        <p>Update the registration, model, or manufacturing year for this vehicle.</p>
    </div>

    <form asp-action="Edit" method="post">
        @* Hidden fields for vehicle ID and Customer ID are critical for the update action *@
        <input type="hidden" asp-for="vehicleId" />
        <input type="hidden" asp-for="CustomerId" />

        <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="registrationNumber" class="form-label insure-label">Registration Number</label>
                    <input asp-for="registrationNumber" class="form-control insure-input" />
                    <span asp-validation-for="registrationNumber" class="field-validation-error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="make" class="form-label insure-label">Make</label>
                    <input asp-for="make" class="form-control insure-input" />
                    <span asp-validation-for="make" class="field-validation-error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="model" class="form-label insure-label">Model</label>
                    <input asp-for="model" class="form-control insure-input" />
                    <span asp-validation-for="model" class="field-validation-error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="yearOfManufacture" class="form-label insure-label">Year of Manufacture</label>
                    @* Added type="number" with min/max attributes for better user experience and validation *@
                    <input asp-for="yearOfManufacture" class="form-control insure-input" type="number" min="1900" max="@DateTime.Now.Year" />
                    <span asp-validation-for="yearOfManufacture" class="field-validation-error"></span>
                </div>
            </div>
        </div>

        <div class="mb-5">
            <label asp-for="vehicleType" class="form-label insure-label">Vehicle Type</label>
            <select asp-for="vehicleType" class="form-select insure-select">
                <option value="">-- Select Type --</option>
                @foreach (var type in Html.GetEnumSelectList<VehicleType>()) 
                {
                    <option value="@type.Value" selected="@(type.Value == Model.vehicleType.ToString() ? "selected" : null)">@type.Text</option>
                }
            </select>
            <span asp-validation-for="vehicleType" class="field-validation-error"></span>
        </div>

        <div class="d-grid gap-3 d-md-flex justify-content-md-center">
            <button type="submit" class="btn btn-insure-update">
                <i class="bi bi-floppy-fill me-2"></i> Save Changes
            </button>
            <a asp-controller="Vehicle" asp-action="ViewVehicles" class="btn btn-insure-secondary">
                <i class="bi bi-arrow-left me-2"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
