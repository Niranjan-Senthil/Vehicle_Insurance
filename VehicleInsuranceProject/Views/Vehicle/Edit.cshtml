@model VehicleInsuranceProject.Repository.Models.Vehicle
@using VehicleInsuranceProject.Repository.Models
@{
    ViewData["Title"] = "Edit Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure your layout is correctly referenced
}

<style>
    /* Color Palette Variables (consistent with ViewVehicles/Add page) */
    :root {
        --insure-primary-purple: #5b21b6; /* A strong, professional purple */
        --insure-accent-blue: #2563eb; /* A complementary deep blue */
        --insure-light-purple: #ede9fe; /* Very light purple for subtle accents */
        --insure-text-dark: #333333; /* General dark text */
        --insure-text-light: #f8fafc; /* White/light text on dark backgrounds */
        --insure-background-light: #f4f6f9; /* Light page background */
        --insure-border-light: #e0e0e0; /* Light border for elements */
        /* Semantic colors for buttons/alerts */
        --insure-success: #22c55e;
        --insure-warning: #f59e0b; /* Professional orange for specific edit elements if needed, but not primary actions */
        --insure-danger: #ef4444;
        --insure-info: #0ea5e9;
    }

    /* Global Body Styling (if not already in _Layout.cshtml or site.css) */
    body {
        background-color: var(--insure-background-light);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--insure-text-dark);
    }

    /* Main form container - clean, professional card */
    .insure-form-card {
        max-width: 800px;
        margin: 60px auto; /* More margin top/bottom */
        padding: 40px;
        background-color: #ffffff; /* Clean white background */
        border-radius: 12px; /* Nicely rounded corners */
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1); /* Soft, subtle shadow */
        border: 1px solid var(--insure-border-light); /* Light border for definition */
    }

        /* Heading for the form */
        .insure-form-card h2 {
            font-size: 2.5rem; /* Prominent heading */
            font-weight: 700; /* Bold */
            color: var(--insure-primary-purple); /* Primary purple for heading, consistent with ViewVehicles */
            margin-bottom: 35px; /* More space below heading */
            text-align: center;
            position: relative;
            padding-bottom: 15px;
        }

            /* Underline accent for the heading */
            .insure-form-card h2::after {
                content: '';
                position: absolute;
                left: 50%;
                bottom: 0;
                transform: translateX(-50%);
                width: 90px; /* Decent length */
                height: 4px; /* Thickness */
                background-color: var(--insure-accent-blue); /* Accent blue for underline, consistent with ViewVehicles */
                border-radius: 2px;
            }

    /* Labels */
    .insure-label {
        font-weight: 600; /* Semi-bold labels */
        color: var(--insure-text-dark); /* Dark, readable text */
        margin-bottom: 8px; /* Space between label and input */
    }

    /* Form Controls (Inputs, Selects) */
    .insure-input, .insure-select {
        border-radius: 8px; /* Consistent rounding */
        border: 1px solid var(--insure-border-light); /* Soft, light border */
        padding: 0.8rem 1.1rem;
        font-size: 1.05rem;
        color: var(--insure-text-dark); /* Standard text color */
        transition: all 0.3s ease;
    }

        .insure-input::placeholder {
            color: #a0a8b4; /* Muted placeholder text */
        }

        .insure-input:focus, .insure-select:focus {
            border-color: var(--insure-accent-blue); /* Accent color on focus, consistent with other pages */
            box-shadow: 0 0 0 0.25rem rgba(37, 99, 235, 0.25); /* Soft glow matching accent */
            outline: none; /* Remove default outline */
            background-color: #fcfdff; /* Slightly whiter background on focus */
        }

    /* Validation summary and individual field errors */
    .validation-summary-errors {
        background-color: #fff0f0; /* Very light red background */
        color: #d80000; /* Darker red text */
        border: 1px solid #ffcccc; /* Red border */
        border-radius: 8px;
        padding: 15px 20px;
        margin-bottom: 25px;
        font-size: 0.95rem;
    }

    .field-validation-error {
        color: #d80000; /* Darker red for individual field errors */
        font-size: 0.85rem;
        margin-top: 5px;
        display: block; /* Ensure it takes its own line */
    }

    /* Buttons - Primary action (Update) */
    .btn-insure-update {
        /* CHANGED: Using --insure-accent-blue for the Update button, like the Add button */
        background-color: var(--insure-accent-blue);
        border-color: var(--insure-accent-blue);
        color: var(--insure-text-light); /* Light text for contrast on blue */
        padding: 0.9rem 2.2rem;
        font-size: 1.15rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-insure-update:hover {
            /* CHANGED: Darken accent blue on hover */
            background-color: color-mix(in srgb, var(--insure-accent-blue) 85%, black);
            border-color: color-mix(in srgb, var(--insure-accent-blue) 85%, black);
            transform: translateY(-2px); /* Slight lift */
            box-shadow: 0 6px 15px rgba(37, 99, 235, 0.25); /* Soft shadow matching blue */
            color: var(--insure-text-light); /* Keep text light */
        }

        .btn-insure-update:active {
            transform: translateY(0);
            box-shadow: none;
        }

    /* Buttons - Secondary action (Back to List) */
    .btn-insure-secondary {
        background-color: #e9ecef; /* Light grey for secondary */
        border: 1px solid var(--insure-border-light);
        color: var(--insure-text-dark); /* Dark text */
        padding: 0.9rem 2.2rem;
        font-size: 1.15rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-insure-secondary:hover {
            background-color: #dee2e6; /* Darker grey on hover */
            border-color: #c5cbd3;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            color: var(--insure-text-dark); /* Keep text dark */
        }

        .btn-insure-secondary:active {
            transform: translateY(0);
            box-shadow: none;
        }
</style>

<div class="container insure-form-card">
    <h2>Edit Vehicle</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="vehicleId" />
        <input type="hidden" asp-for="CustomerId" />

        <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="registrationNumber" class="form-label insure-label">Registration Number</label>
                    <input asp-for="registrationNumber" class="form-control insure-input" />
                    <span asp-validation-for="registrationNumber" class="field-validation-error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="make" class="form-label insure-label">Make</label>
                    <input asp-for="make" class="form-control insure-input" />
                    <span asp-validation-for="make" class="field-validation-error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="model" class="form-label insure-label">Model</label>
                    <input asp-for="model" class="form-control insure-input" />
                    <span asp-validation-for="model" class="field-validation-error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-4">
                    <label asp-for="yearOfManufacture" class="form-label insure-label">Year of Manufacture</label>
                    <input asp-for="yearOfManufacture" class="form-control insure-input" />
                    <span asp-validation-for="yearOfManufacture" class="field-validation-error"></span>
                </div>
            </div>
        </div>

        <div class="mb-5">
            <label asp-for="vehicleType" class="form-label insure-label">Vehicle Type</label>
            <select asp-for="vehicleType" class="form-select insure-select">
                <option value="">-- Select Type --</option>
                @foreach (var type in Html.GetEnumSelectList<VehicleType>()) // <--- CHANGED THIS LINE
                {
                    <option value="@type.Value" selected="@(type.Value == Model.vehicleType.ToString() ? "selected" : null)">@type.Text</option>
                   
                }
            </select>
            <span asp-validation-for="vehicleType" class="field-validation-error"></span>
        </div>

        <div class="d-grid gap-3 d-md-flex justify-content-md-center">
            <button type="submit" class="btn btn-insure-update">
                <i class="bi bi-pencil-square me-2"></i> Update Vehicle
            </button>
            <a asp-controller="Vehicle" asp-action="ViewVehicles" class="btn btn-insure-secondary">
                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}