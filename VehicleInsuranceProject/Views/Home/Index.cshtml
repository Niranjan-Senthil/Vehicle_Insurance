<!-- EXTERNAL LINKS: Font Awesome is required for all icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<style>
    /* Styling for the Home Page specific elements */
    .hero-section {
        background-color: #f0f4f8;
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        animation: fadeIn 1s ease-in-out;
    }

    .features-section {
        background-color: #ffffff;
    }

    .about-contact-section {
        border-radius: 20px;
    }

    .card, .contact-card, .testimonial-card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border-radius: 10px;
        border: none;
    }

        .card:hover, .contact-card:hover, .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    /* Custom styles for the new statistic cards in the About Us section */
    .stat-card-primary, .stat-card-light, .stat-card-success, .stat-card-secondary {
        /* This applies the soft edges across all stat cards */
        border-radius: 15px !important; 
        transform: scale(1);
        transition: transform 0.3s ease-in-out;
    }
    
    .stat-card-primary {
        background-color: #007BFF; /* Primary blue */
    }
    .stat-card-primary:hover {
        transform: scale(1.03);
    }

    .stat-card-light {
        border: 2px solid #007BFF;
        color: #007BFF; /* Ensure text is primary color */
    }
    .stat-card-light:hover {
        transform: scale(1.03);
    }
    
    .stat-card-light p {
        color: #6c757d !important; /* Muted text color for description */
    }

    .stat-card-success {
        background-color: #28a745; /* Green for success/speed */
    }
    .stat-card-success:hover {
        transform: scale(1.03);
    }

    .stat-card-secondary {
        background-color: #6c757d; /* Grey for years/history */
    }
    .stat-card-secondary:hover {
        transform: scale(1.03);
    }
    /* End of custom stat styles */


    .btn-primary, .btn-secondary {
        transition: all 0.3s ease-in-out;
    }

        /* Uses the variable defined in _Layout.cshtml */
        .btn-primary:hover {
            transform: translateY(-2px);
            background-color: #0056b3; 
        }

        .btn-secondary:hover {
            transform: translateY(-2px);
            background-color: #5a6268;
        }

    .contact-list li {
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    /* Scroll-to-top button styling */
    #scroll-to-top {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 99;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        padding: 0;
        line-height: 50px;
        text-align: center;
        opacity: 0;
        transition: opacity 0.5s ease-in-out;
    }

        #scroll-to-top.show {
            opacity: 1;
        }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .animate-fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes slideUp {
        from {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .animate-slide-up {
        animation: slideUp 0.8s ease-out;
    }

    @@keyframes pop {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    .animate-pop:hover {
        animation: pop 0.5s ease-in-out;
    }
</style>
<script>
    // Get the button
    let mybutton = document.getElementById("scroll-to-top");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.classList.add("show");
        } else {
            mybutton.classList.remove("show");
        }
    };

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
</script>
